<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="TOP_LEFT" prefHeight="400.0" prefWidth="600.0" spacing="20.0" style="-fx-background-color: #2D294C;" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.gamerguard.controller.OTPNoSessionController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <Label fx:id="otpMessageLabel" text="Enter your account email to reset password" textFill="#f0eada" wrapText="true">
        <font>
            <Font size="20.0" />
        </font>
    </Label>
    <TextField fx:id="otpTextField" prefHeight="39.0" prefWidth="475.0" promptText="Enter your account email" style="-fx-background-color: F0EADA;" />
    <HBox alignment="BOTTOM_RIGHT" spacing="10.0">
        <Label fx:id="otpField" alignment="CENTER" textFill="WHITE">
            <font>
                <Font size="20.0" />
            </font>
        </Label>
        <Button fx:id="verifyButton" onAction="#verifyButtonOnAction" style="-fx-background-color: F0EADA;" text="Next">
            <font>
                <Font size="15.0" />
            </font>
        </Button>
    </HBox>
</VBox>
