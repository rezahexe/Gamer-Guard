<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="TOP_LEFT" prefHeight="400.0" prefWidth="600.0" spacing="20.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/21" fx:controller="com.example.gamerguard.controller.TermsAndConditionsController">
<padding>
    <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
</padding>

<Label text="Welcome to Gmaer Guard. You must agree to the following terms and conditions before you can use the application." wrapText="true" />

<TextArea fx:id="termsAndConditions" editable="false" wrapText="true" />

<CheckBox fx:id="agreeCheckBox" onAction="#onAgreeCheckBoxClick" text="I agree to the terms and conditions." />

<HBox alignment="BOTTOM_RIGHT" spacing="10.0">
    <Button onAction="#onCancelButtonClick" text="Cancel" />
    <Button fx:id="nextButton" disable="true" onAction="#onNextButtonClick" text="Next" />
</HBox>

</VBox>
