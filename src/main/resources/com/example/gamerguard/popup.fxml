<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.layout.HBox?>
<VBox alignment="CENTER" spacing="10.0" style="-fx-background-color: white;" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.gamerguard.controller.PopupController">
    <padding>
        <Insets top="20.0" right="20.0" bottom="20.0" left="20.0" />
    </padding>
    <Label fx:id="messageLabel" text="OPPS!!!" style="-fx-font-size: 18pt;" />
    <Label text="This is a reminder for you to take a break" wrapText="true"/>
    <HBox alignment="CENTER" spacing="20.0">
        <Button text="Close" fx:id="closeButton" onAction="#handleClose"/>
        <Button text="Settings" fx:id="settingsButton" onAction="#handleSettings"/>
    </HBox>
</VBox>
